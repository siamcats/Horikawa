                        Thickness="{x:Bind vm.DesignConfig.ScaleThickness,Mode=OneWay}"
                        IsAlterScale="{x:Bind vm.DesignConfig.IsAlterScale,Mode=OneWay}"
                        AlterInterval="{x:Bind vm.DesignConfig.AlterScaleInterval,Mode=OneWay}"
                        AlterRadius="{x:Bind vm.DesignConfig.AlterScaleRadius,Mode=OneWay}"
                        AlterLength="{x:Bind vm.DesignConfig.AlterScaleLength,Mode=OneWay}"
                        AlterThickness="{x:Bind vm.DesignConfig.AlterScaleThickness,Mode=OneWay}"
                        Color="{x:Bind vm.DesignConfig.ScaleColor,Mode=OneWay}"
                        Height="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" />
                    <local:CircleScale
                        x:Name="dialIndexBar"
                        HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Count="12"
                        Visibility="{x:Bind vm.IndexBarVisible,Mode=OneWay}"
                        Radius="{x:Bind vm.DesignConfig.IndexRadius,Mode=OneWay}"
                        Length="{x:Bind vm.DesignConfig.IndexLength,Mode=OneWay}"
                        Thickness="{x:Bind vm.DesignConfig.IndexThickness,Mode=OneWay}"
                        Color="{x:Bind vm.DesignConfig.IndexColor,Mode=OneWay}"
                        Height="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" />
                    <local:CircleIndex
                        x:Name="dialIndex"
                        HorizontalAlignment="Left" 
                        Visibility="{x:Bind vm.IndexVisible,Mode=OneWay}"
                        Type="{x:Bind vm.DesignConfig.IndexType,Mode=OneWay}"
                        Radius="{x:Bind vm.DesignConfig.IndexRadius,Mode=OneWay}"
                        FontSize="{x:Bind vm.DesignConfig.IndexFontSize,Mode=OneWay}"
                        FontFamily="{x:Bind vm.DesignConfig.IndexFontFamily,Mode=OneWay}"
                        Color="{x:Bind vm.DesignConfig.IndexColor,Mode=OneWay}" />
                    <!--Height="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" />-->
                    <!-- デイト -->
                    <Border
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="{x:Bind vm.DateCoordinate,Mode=OneWay}"
                        Width="{x:Bind vm.DesignConfig.DateWidth,Mode=OneWay}"
                        Height="{x:Bind vm.DesignConfig.DateHeight,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsDateDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Background="{x:Bind vm.DesignConfig.DateBackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}"
                        BorderThickness="{x:Bind vm.DesignConfig.DateBorderThickness,Converter={StaticResource Thickness},Mode=OneWay}"
                        BorderBrush="{x:Bind vm.DesignConfig.DateBorderColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <TextBlock
                            x:Name="dateDisplay" Text="31 Tue"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="{x:Bind vm.DesignConfig.DateFontSize,Mode=OneWay}"
                            FontFamily="{x:Bind vm.DesignConfig.DateFontFamily,Mode=OneWay}"
                            Foreground="{x:Bind vm.DesignConfig.DateFontColor,Converter={StaticResource ColorBrush},Mode=OneWay}" />
                    </Border>
                    <!--時針-->
                    <Path
                        x:Name="HourHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" 
                        Margin="{x:Bind vm.HourHand.Margin,Mode=OneWay}"
                        Width="{x:Bind vm.HourHand.Width,Mode=OneWay}"
                        Height="{x:Bind vm.HourHand.Height,Mode=OneWay}"
                        Data="{x:Bind vm.HourHand.Data,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Fill="{x:Bind vm.DesignConfig.HandsColor,Converter={StaticResource ColorBrush},Mode=OneWay}"
                        StrokeThickness="{x:Bind vm.DesignConfig.HandsStrokeThickness,Mode=OneWay}"
                        Stroke="{x:Bind vm.DesignConfig.HandsStrokeColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform
                                x:Name="hourHandAngle"
                                CenterX="{x:Bind vm.HourHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind vm.HourHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Width="{x:Bind vm.HourHand.Pivot,Mode=OneWay}" Height="{x:Bind vm.HourHand.Pivot,Mode=OneWay}"
                        Fill="{x:Bind HourHand.Fill,Mode=OneWay}"
                        StrokeThickness="{x:Bind vm.DesignConfig.HandsStrokeThickness,Mode=OneWay}"
                        Stroke="{x:Bind vm.DesignConfig.HandsStrokeColor,Converter={StaticResource ColorBrush},Mode=OneWay}"/>
                    <!--分針-->
                    <Path
                        x:Name="minuteHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill"
                        Margin="{x:Bind vm.MinuteHand.Margin,Mode=OneWay}"
                        Width="{x:Bind vm.MinuteHand.Width,Mode=OneWay}"
                        Height="{x:Bind vm.MinuteHand.Height,Mode=OneWay}"
                        Data="{x:Bind vm.MinuteHand.Data,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Fill="{x:Bind vm.DesignConfig.HandsColor,Converter={StaticResource ColorBrush},Mode=OneWay}"
                        StrokeThickness="{x:Bind vm.DesignConfig.HandsStrokeThickness,Mode=OneWay}"
                        Stroke="{x:Bind vm.DesignConfig.HandsStrokeColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="minuteHandAngle"
                                CenterX="{x:Bind vm.MinuteHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind vm.MinuteHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Width="{x:Bind vm.MinuteHand.Pivot,Mode=OneWay}" Height="{x:Bind vm.MinuteHand.Pivot,Mode=OneWay}"
                        Fill="{x:Bind HourHand.Fill,Mode=OneWay}"
                        StrokeThickness="{x:Bind vm.DesignConfig.HandsStrokeThickness,Mode=OneWay}"
                        Stroke="{x:Bind vm.DesignConfig.HandsStrokeColor,Converter={StaticResource ColorBrush},Mode=OneWay}"/>
                    <!--秒針-->
                    <Path 
                            x:Name="secondHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill"
                            Margin="{x:Bind vm.SecondHand.Margin,Mode=OneWay}"
                            Width="{x:Bind vm.SecondHand.Width,Mode=OneWay}"
                            Height="{x:Bind vm.SecondHand.Height,Mode=OneWay}"
                            Data="{x:Bind vm.SecondHand.Data,Mode=OneWay}"
                            Visibility="{x:Bind vm.DesignConfig.IsSecondHandDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                            Fill="{x:Bind vm.DesignConfig.SecondHandColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="secondHandAngle"
                                    CenterX="{x:Bind vm.SecondHand.CenterX,Mode=OneWay}"
                                    CenterY="{x:Bind vm.SecondHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Visibility="{x:Bind vm.DesignConfig.IsSecondHandDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Width="{x:Bind vm.SecondHand.Pivot,Mode=OneWay}" Height="{x:Bind vm.SecondHand.Pivot,Mode=OneWay}"
                        Fill="{x:Bind secondHand.Fill,Mode=OneWay}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <!--タイトルバー-->

        <Grid
            x:Name="myTitleBar" Height="30" VerticalAlignment="Top"
            Background="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ToggleButton
                    x:Name="configButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    Tapped="ConfigButton_Tapped" >
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" />
                    </ToggleButton.Content>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <ToggleButton
                    x:Name="clipButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    IsChecked="{x:Bind vm.AppConfig.IsTopMost, Mode=TwoWay}" Tapped="ClipButton_Tapped">
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE718;" />
                    </ToggleButton.Content>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="2" x:Name="moveButton" Height="30" Background="Transparent"/>
        </Grid>

    </Grid>


</Page>
