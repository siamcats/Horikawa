<Page
    x:Class="iBuki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iBuki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="500" Height="500" Visibility="Visible" SizeChanged="Page_SizeChanged"
    HorizontalAlignment="Left" VerticalAlignment="Top"
    RequestedTheme="{x:Bind vm.AppConfig.SystemTheme,Mode=TwoWay}"
    Background="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}">
    <Page.Resources>
        <local:BoolToEnumConverter x:Key="Enum" />
        <local:BoolToVisibilityConverter x:Key="Visibility" />
        <local:ColorAndBrushInterConverter x:Key="ColorBrush" />
        <local:EnumAndIntInterConverter x:Key="EnumInt" />
        <local:DecimalTruncateConveter x:Key="Truncate" />
    </Page.Resources>

    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

        <SplitView
            x:Name="Splitter"
            DisplayMode="CompactOverlay"
            CompactPaneLength="0" OpenPaneLength="300"
            IsPaneOpen="{Binding ElementName=configButton,Path=IsChecked, Mode=TwoWay}" >

            <!-- 設定パネル -->

            <SplitView.Pane>
                <Grid x:Name="ConfigPanel">
                    <Pivot>
                        <!--全般-->
                        <PivotItem x:Uid="pivotGeneral">
                            <ScrollViewer>
                                <StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configTheme" Text="Window Theme"/>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                x:Uid="configThemeRadioDark" Content="Dark"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Dark, Mode=TwoWay}" />
                                            <RadioButton
                                                x:Uid="configThemeRadioLight" Content="Light"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Light, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configLanguage" Text="Language" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="languageComboBox" Width="100"
                                                ItemsSource="{x:Bind vm.AppConfig.LanguageList}"
                                                SelectedItem="{x:Bind vm.AppConfig.Language,Mode=TwoWay}"
                                                SelectionChanged="LanguageComboBox_SelectionChanged" />
                                            <HyperlinkButton
                                                x:Uid="restart" Content="Restart App to Apply "
                                                x:Name="restartLink" Margin="10,0,0,0" Visibility="Collapsed"
                                                Tapped="HyperlinkButton_Tapped"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configMovement" Text="Movement"/>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                x:Uid="configMovementRadioQuartz" Content="Quartz"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Quartz, Mode=TwoWay}" />
                                            <RadioButton
                                                x:Uid="configMovementRadioMechanical" Content="Mechanical"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Mechanical, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--テンプレート-->
                        <PivotItem x:Uid="pivotTemplate">
                            <ListView x:Name="listView1" SelectionChanged="ListView1_SelectionChanged">
                                <x:String>Station</x:String>
                                <x:String>Porto</x:String>
                                <x:String>Volks</x:String>
                            </ListView>
                        </PivotItem>
                        <!--背景-->
                        <PivotItem x:Uid="pivotBackground">
                            <ScrollViewer><StackPanel>
                                <TextBlock
                                    x:Uid="configBackgroundColor" Text="Color"/>
                                <Rectangle
                                        x:Name="backgroundColorRectangle" Height="32" Width="64"  HorizontalAlignment="Left"
                                        Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                        Fill="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                        Tapped="ColorRectangle_Tapped">
                                    <FlyoutBase.AttachedFlyout>
                                        <Flyout Placement="Right">
                                            <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                <ColorPicker
                                                    x:Name="backgroundColorPicker"
                                                    IsColorChannelTextInputVisible="False"
                                                    IsColorSliderVisible="True"
                                                    Color="{x:Bind vm.DesignConfig.BackgroundColor,Mode=TwoWay}"/>
                                            </Viewbox>
                                        </Flyout>
                                    </FlyoutBase.AttachedFlyout>
                                </Rectangle>
                                <ToggleSwitch 
                                    x:Uid="configBackgroundImageDisplay" x:Name="backgroundImageDisplayToggle" 
                                    Header="Image" OffContent="Off" OnContent="On"
                                    IsOn="{x:Bind vm.DesignConfig.IsBackgroundImageDisplay, Mode=TwoWay}" />
                                <StackPanel Margin="10,0,0,0">
                                    <Button
                                        x:Uid="configImageSelect" Content="Select Image" 
                                        x:Name="DialImagePicker" Tapped="DialImagePicker_Tapped"
                                        IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}"
                                        />
                                </StackPanel>
                            </StackPanel></ScrollViewer>
                        </PivotItem>
                        <!--文字盤-->
                        <PivotItem x:Uid="pivotClockFace">
                            <ScrollViewer>
                                <StackPanel>
                                    <ToggleSwitch
                                        x:Uid="configScaleDisplay"
                                        x:Name="scaleDisplayToggle" 
                                        Header="Scale" OffContent="Off" OnContent="On"
                                        IsOn="{x:Bind vm.DesignConfig.IsScaleDisplay, Mode=TwoWay}" />
                                    <StackPanel Margin="10,0,0,20">
                                        <TextBlock
                                            x:Uid="configCount" Text="Count" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                x:Name="scaleCountSlider"
                                                Minimum="0" Maximum="240" Width="200"
                                                TickPlacement="Outside" TickFrequency="12" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleCount,Mode=TwoWay}" />
                                            <TextBlock
                                                HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"
                                                Text="{x:Bind scaleCountSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                        <TextBlock
                                            x:Uid="configLength" Text="Length" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                x:Name="scaleLengthSlider"
                                                Minimum="0.1" Maximum="4" Width="200"
                                                TickPlacement="None" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleLength,Mode=TwoWay}" />
                                            <TextBlock
                                                HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"
                                                Text="{x:Bind scaleLengthSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                        <TextBlock
                                            x:Uid="configThickness" Text="Thickness" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                x:Name="scaleThicknessSlider"
                                                Minimum="0.1" Maximum="2" Width="200"
                                                TickPlacement="None" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleThickness,Mode=TwoWay}" />
                                            <TextBlock
                                                HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"
                                                Text="{x:Bind scaleThicknessSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                        <TextBlock
                                            x:Uid="configColor" Text="Color"/>
                                        <Rectangle
                                            x:Name="scaleColorRectangle" Height="32" Width="64"  HorizontalAlignment="Left"
                                            Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                            IsTapEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                            Fill="{x:Bind vm.DesignConfig.ScaleColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorRectangle_Tapped">
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                            x:Name="scaleColorPicker"
                                                            IsColorChannelTextInputVisible="False"
                                                            IsColorSliderVisible="True"
                                                            Color="{x:Bind vm.DesignConfig.ScaleColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Rectangle>
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Uid="configIndexDisplay"
                                        x:Name="indexDisplayToggle" 
                                        Header="Index" OffContent="Off" OnContent="On"
                                        IsOn="{x:Bind vm.DesignConfig.IsIndexDisplay, Mode=TwoWay}" />
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock
                                            x:Uid="configType" Text="Type" />
                                        <ComboBox
                                            x:Name="indexTypeComboBox" Width="150"
                                            IsEnabled="{x:Bind indexDisplayToggle.IsOn, Mode=OneWay}"
                                            ItemsSource="{x:Bind vm.IndexTypeList}"
                                            SelectedIndex="{x:Bind vm.IndexType,Converter={StaticResource EnumInt} ,Mode=TwoWay}" />
                                        <TextBlock
                                            x:Uid="configColor" Text="Color"/>
                                        <Rectangle
                                            x:Name="indexColorRectangle" Height="32" Width="64" HorizontalAlignment="Left"
                                            Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                            IsTapEnabled="{x:Bind indexDisplayToggle.IsOn,Mode=OneWay}"
                                            Fill="{x:Bind vm.DesignConfig.IndexColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorRectangle_Tapped">
                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout Placement="Right">
                                                <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                    <ColorPicker
                                                    x:Name="indexColorPicker"
                                                    IsColorChannelTextInputVisible="False"
                                                    IsColorSliderVisible="True"
                                                    Color="{x:Bind vm.DesignConfig.IndexColor,Mode=TwoWay}"/>
                                                </Viewbox>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                        </Rectangle>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--針-->
                        <PivotItem x:Uid="pivotHands">
                            <ScrollViewer>
                                <StackPanel>
                                    <TextBlock
                                        x:Uid="configType" Text="Type" />
                                    <ComboBox
                                        x:Name="handsTypeComboBox" Width="150"
                                        ItemsSource="{x:Bind vm.HandsTypeList}"
                                        SelectedIndex="{x:Bind vm.HandsType,Converter={StaticResource EnumInt} ,Mode=TwoWay}"
                                        SelectionChanged="HandsTypeComboBox_SelectionChanged" />
                                    <ToggleSwitch
                                        x:Uid="configHandsDisplay" x:Name="handsDisplayToggle" 
                                        Header="Hour / Minute Hands" OffContent="Off" OnContent="On"
                                        IsOn="{x:Bind vm.DesignConfig.IsHandsDisplay, Mode=TwoWay}" />
                                    <StackPanel Margin="10,0,0,20">
                                        <TextBlock
                                            x:Uid="configColor" Text="Color"/>
                                        <Rectangle
                                            x:Name="handsColorRectangle" Height="32" Width="64"  HorizontalAlignment="Left"
                                            Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                            IsTapEnabled="{x:Bind handsDisplayToggle.IsOn,Mode=OneWay}"
                                            Fill="{x:Bind vm.DesignConfig.HandsColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorRectangle_Tapped">
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                            x:Name="handsColorPicker"
                                                            IsColorChannelTextInputVisible="False"
                                                            IsColorSliderVisible="True"
                                                            Color="{x:Bind vm.DesignConfig.HandsColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Rectangle>
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Uid="configHandsDisplay" x:Name="secondHandDisplayToggle" 
                                        Header="Second Hand" OffContent="Off" OnContent="On"
                                        IsOn="{x:Bind vm.DesignConfig.IsSecondHandDisplay, Mode=TwoWay}" />
                                    <StackPanel Margin="10,0,0,20">
                                        <TextBlock
                                            x:Uid="configColor" Text="Color"/>
                                        <Rectangle
                                            x:Name="secondHandColorRectangle" Height="32" Width="64"  HorizontalAlignment="Left"
                                            Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                            IsTapEnabled="{x:Bind secondHandDisplayToggle.IsOn,Mode=OneWay}"
                                            Fill="{x:Bind vm.DesignConfig.SecondHandColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorRectangle_Tapped">
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                        x:Name="secondHandColorPicker"
                                                        IsColorChannelTextInputVisible="False"
                                                        IsColorSliderVisible="True"
                                                        Color="{x:Bind vm.DesignConfig.SecondHandColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Rectangle>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--デイト-->
                        <PivotItem x:Uid="pivotDateDisplay">
                            <StackPanel>
                                <ToggleSwitch 
                                    x:Uid="configDateDisplay"
                                    x:Name="dateDisplayToggle" 
                                    Header="Date Display" OffContent="Off" OnContent="On"
                                    IsOn="{x:Bind vm.DesignConfig.IsDateDisplay, Mode=TwoWay}" />
                                <StackPanel>
                                    <TextBlock
                                        x:Uid="configDateFormat" Text="Date Format"/>
                                    <TextBox
                                        x:Name="dateDisplayFormatTextBox"
                                        IsEnabled="{x:Bind dateDisplayToggle.IsOn, Mode=OneWay}"
                                        Text="{x:Bind vm.DesignConfig.DateDisplayFormat,Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock
                                        x:Uid="configDateDisplayFormat" Text="Font Size"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Slider
                                                x:Name="dateFontSizeSlider"
                                                Minimum="1" Maximum="80" Width="200"
                                                TickPlacement="Outside" TickFrequency="1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind dateDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.DateFontSize,Mode=TwoWay}" />
                                        <TextBlock
                                                HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"
                                                Text="{x:Bind dateFontSizeSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock
                                    x:Uid="configColor" Text="Color"/>
                                <Rectangle
                                    x:Name="dateDisplayColorRectangle" Height="32" Width="64"  HorizontalAlignment="Left"
                                    Stroke="{ThemeResource SystemBaseMediumColor}" StrokeThickness="2"
                                    IsTapEnabled="{x:Bind secondHandDisplayToggle.IsOn,Mode=OneWay}"
                                    Fill="{x:Bind vm.DesignConfig.DateColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                    Tapped="ColorRectangle_Tapped">
                                    <FlyoutBase.AttachedFlyout>
                                        <Flyout Placement="Right">
                                            <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                <ColorPicker
                                                    x:Name="dateDisplayColorPicker"
                                                    IsColorChannelTextInputVisible="False"
                                                    IsColorSliderVisible="True"
                                                    Color="{x:Bind vm.DesignConfig.DateColor,Mode=TwoWay}"/>
                                            </Viewbox>
                                        </Flyout>
                                    </FlyoutBase.AttachedFlyout>
                                </Rectangle>
                            </StackPanel>
                        </PivotItem>
                    </Pivot>
                </Grid>
            </SplitView.Pane>

            <!-- コンテンツビュー -->

            <SplitView.Content>
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="500" >
                    <!-- 文字盤 -->
                    <Image
                        x:Name="backgroundImage"
                        Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Visibility="{x:Bind vm.DesignConfig.IsBackgroundImageDisplay,Mode=OneWay}"
                        Source="{x:Bind vm.DesignConfig.BackgroundImage,Mode=OneWay}"
                        Height="{x:Bind vm.AppConfig.WindowSize}" Width="{x:Bind vm.AppConfig.WindowSize}" />
                    <local:CircleMeter
                        x:Name="dialScale"
                        HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Radius="45.3"
                        Visibility="{x:Bind vm.DesignConfig.IsScaleDisplay,Mode=OneWay}"
                        Length="{x:Bind vm.DesignConfig.ScaleLength,Mode=OneWay}"
                        Thickness="{x:Bind vm.DesignConfig.ScaleThickness,Mode=OneWay}"
                        Count="{x:Bind vm.DesignConfig.ScaleCount,Mode=OneWay}"
                        Color="{x:Bind vm.DesignConfig.ScaleColor,Mode=OneWay}"
                        Height="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" />
                    <local:CircleMeter
                        x:Name="dialIndexBar"
                        HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Count="12" Thickness="2" Length="10"
                        Visibility="{x:Bind vm.DesignConfig.IsIndexDisplay,Mode=OneWay}"
                        Color="{x:Bind vm.DesignConfig.IndexColor,Mode=OneWay}"
                        Height="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind vm.AppConfig.WindowSize,Mode=TwoWay}" />
                    <!-- デイト -->
                    <TextBlock 
                        x:Name="dateDisplay"
                        Margin="300,300,0,0" Text="31"
                        Visibility="{x:Bind vm.DesignConfig.IsDateDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        FontSize="{x:Bind vm.DesignConfig.DateFontSize,Mode=OneWay}"
                        FontFamily="{x:Bind vm.DesignConfig.DateFontFamily,Mode=OneWay}"
                        Foreground="{x:Bind vm.DesignConfig.DateColor,Mode=OneWay}" />
                    <!--時針-->
                    <Path
                        x:Name="HourHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" 
                        Margin="{x:Bind vm.HourHand.Margin,Mode=OneWay}"
                        Width="{x:Bind vm.HourHand.Width,Mode=OneWay}"
                        Height="{x:Bind vm.HourHand.Height,Mode=OneWay}"
                        Data="{x:Bind vm.HourHand.Data,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Fill="{x:Bind vm.DesignConfig.HandsColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform
                                x:Name="hourHandAngle"
                                CenterX="{x:Bind vm.HourHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind vm.HourHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <!--分針-->
                    <Path
                        x:Name="minuteHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill"
                        Margin="{x:Bind vm.MinuteHand.Margin,Mode=OneWay}"
                        Width="{x:Bind vm.MinuteHand.Width,Mode=OneWay}"
                        Height="{x:Bind vm.MinuteHand.Height,Mode=OneWay}"
                        Data="{x:Bind vm.MinuteHand.Data,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Fill="{x:Bind vm.DesignConfig.HandsColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="minuteHandAngle"
                                CenterX="{x:Bind vm.MinuteHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind vm.MinuteHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Visibility="{x:Bind vm.DesignConfig.IsHandsDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Width="{x:Bind vm.MinuteHand.Pivot,Mode=OneWay}" Height="{x:Bind vm.MinuteHand.Pivot,Mode=OneWay}"
                        Fill="{x:Bind HourHand.Fill,Mode=OneWay}"/>
                    <!--秒針-->
                    <Path 
                        x:Name="secondHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill"
                        Margin="{x:Bind vm.SecondHand.Margin,Mode=OneWay}"
                        Width="{x:Bind vm.SecondHand.Width,Mode=OneWay}"
                        Height="{x:Bind vm.SecondHand.Height,Mode=OneWay}"
                        Data="{x:Bind vm.SecondHand.Data,Mode=OneWay}"
                        Visibility="{x:Bind vm.DesignConfig.IsSecondHandDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Fill="{x:Bind vm.DesignConfig.SecondHandColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="secondHandAngle"
                                CenterX="{x:Bind vm.SecondHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind vm.SecondHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Visibility="{x:Bind vm.DesignConfig.IsSecondHandDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        Width="{x:Bind vm.SecondHand.Pivot,Mode=OneWay}" Height="{x:Bind vm.SecondHand.Pivot,Mode=OneWay}"
                        Fill="{x:Bind secondHand.Fill,Mode=OneWay}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <!--タイトルバー-->

        <Grid
            x:Name="myTitleBar" Height="30" VerticalAlignment="Top"
            Background="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ToggleButton
                    x:Name="configButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    Foreground="{x:Bind vm.DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}"
                    Tapped="ConfigButton_Tapped" >
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" />
                    </ToggleButton.Content>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="1">
                    <ToggleButton
                        x:Name="clipButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                        IsChecked="{x:Bind vm.AppConfig.IsTopMost, Mode=TwoWay}" Tapped="ClipButton_Tapped"
                        Foreground="{x:Bind vm.DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <ToggleButton.Content>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE718;" />
                        </ToggleButton.Content>
                    </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="2" x:Name="moveButton" Height="30" Background="Transparent">
                <!--<ToggleButton
                    x:Name="moveButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    Foreground="{x:Bind vm.DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE759;" />
                    </ToggleButton.Content>
                </ToggleButton>-->
            </StackPanel>
        </Grid>

    </Grid>


</Page>
