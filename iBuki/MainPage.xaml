<Page
    x:Class="iBuki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iBuki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="500" Height="500" Visibility="Visible" SizeChanged="Page_SizeChanged"
    HorizontalAlignment="Left" VerticalAlignment="Top"
    RequestedTheme="{x:Bind AppConfig.SystemTheme,Mode=TwoWay}"
    Background="{x:Bind DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}">
    <Page.Resources>
        <local:BoolToEnumConverter x:Key="Enum" />
        <local:BoolToVisibilityConverter x:Key="Visibility" />
        <local:ColorAndBrushInterConverter x:Key="ColorBrush" />
        <local:EnumAndIntInterConverter x:Key="EnumInt" />
    </Page.Resources>

    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

        <SplitView
            x:Name="Splitter"
            DisplayMode="CompactOverlay"
            CompactPaneLength="0" OpenPaneLength="300"
            IsPaneOpen="{Binding ElementName=configButton,Path=IsChecked, Mode=TwoWay}" >

            <!-- 設定パネル -->

            <SplitView.Pane>
                <Grid x:Name="ConfigPanel">
                    <Pivot>
                        <!--全般-->
                        <PivotItem x:Uid="pivotGeneral">
                            <ScrollViewer>
                                <StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configTheme" Text="Window Theme"/>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                x:Uid="configThemeRadioDark" Content="Dark"
                                                IsChecked="{x:Bind AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Dark, Mode=TwoWay}" />
                                            <RadioButton
                                                x:Uid="configThemeRadioLight" Content="Light"
                                                IsChecked="{x:Bind AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Light, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configLanguage" Text="Language" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="languageComboBox" Width="100"
                                                ItemsSource="{x:Bind AppConfig.LanguageList}"
                                                SelectedItem="{x:Bind AppConfig.Language,Mode=TwoWay}"
                                                SelectionChanged="LanguageComboBox_SelectionChanged" />
                                            <HyperlinkButton
                                                x:Uid="restart" Content="Restart App to Apply "
                                                x:Name="restartLink" Margin="10,0,0,0" Visibility="Collapsed"
                                                Tapped="HyperlinkButton_Tapped"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configMovement" Text="Movement"/>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                x:Uid="configMovementRadioQuartz" Content="Quartz"
                                                IsChecked="{x:Bind AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Quartz, Mode=TwoWay}" />
                                            <RadioButton
                                                x:Uid="configMovementRadioMechanical" Content="Mechanical"
                                                IsChecked="{x:Bind AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Mechanical, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--テンプレート-->
                        <PivotItem x:Uid="pivotTemplate">
                            <ListView x:Name="listView1" SelectionChanged="ListView1_SelectionChanged">
                                <x:String>Porto</x:String>
                                <x:String>Volks</x:String>
                                <x:String>Station</x:String>
                            </ListView>
                        </PivotItem>
                        <!--背景-->
                        <PivotItem x:Uid="pivotBackground">
                            <ScrollViewer>
                                <StackPanel>
                                    <TextBlock
                                        x:Uid="configBackgroundColor" Text="Background Color"/>
                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                        <ColorPicker
                                            x:Name="backgroundColorPicker"
                                            IsColorChannelTextInputVisible="False"
                                            IsColorSliderVisible="True"
                                            Color="{x:Bind DesignConfig.BackgroundColor,Mode=TwoWay}"/>
                                    </Viewbox>
                                    <StackPanel>
                                        <TextBlock Text="Background Image"/>
                                        <Button x:Name="DialImagePicker"
                                            Content="Select Image" Tapped="DialImagePicker_Tapped"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--文字盤-->
                        <PivotItem x:Uid="pivotClockFace">
                            <ScrollViewer>
                                <StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        <!--針-->
                        </PivotItem>
                        <PivotItem x:Uid="pivotHands">
                            <ScrollViewer>
                                <StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configHandsType" Text="Hands Type" />
                                        <ComboBox
                                            x:Name="handsTypeComboBox" Width="150"
                                            ItemsSource="{x:Bind DesignConfig.HandsTypeList}"
                                            SelectedIndex="{x:Bind DesignConfig.HandsType, Converter={StaticResource EnumInt} ,Mode=TwoWay}"
                                            SelectionChanged="HandsTypeComboBox_SelectionChanged" />
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configHandsColor" Text="Color"/>
                                        <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                            <ColorPicker
                                                x:Name="handsColorPicker"
                                                IsColorChannelTextInputVisible="False"
                                                Color="{x:Bind DesignConfig.HandsColor,Mode=TwoWay}"/>
                                        </Viewbox>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="configSecondHandColor" Text="Color (Second Hand)"/>
                                        <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                            <ColorPicker
                                                x:Name="secondHandColorPicker"
                                                IsColorChannelTextInputVisible="False"
                                                Color="{x:Bind DesignConfig.SecondHandColor,Mode=TwoWay}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        <!--デイト-->
                        </PivotItem>
                        <PivotItem x:Uid="pivotDateDisplay">
                            <StackPanel>
                                <ToggleSwitch 
                                    x:Uid="configDateDisplay"
                                    x:Name="dateDisplayToggle" 
                                    Header="Date Display" OffContent="Off" OnContent="On"
                                    IsOn="{x:Bind DesignConfig.IsDateDisplay, Mode=TwoWay}" />
                                <StackPanel>
                                    <TextBlock
                                        x:Uid="configDateDisplayFormat" Text="Date Format"/>
                                    <TextBox
                                        x:Name="dateDisplayFormatTextBox"
                                        IsEnabled="{x:Bind dateDisplayToggle.IsOn, Mode=OneWay}"
                                        Text="{x:Bind DesignConfig.DateDisplayFormat,Mode=TwoWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </PivotItem>
                    </Pivot>
                </Grid>
            </SplitView.Pane>

            <!-- コンテンツビュー -->

            <SplitView.Content>
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="500" >
                    <!-- 文字盤 -->
                    <Image
                        x:Name="bgImage"
                        Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Source="{x:Bind DesignConfig.DialImage,Mode=OneWay}"
                        Height="{x:Bind AppConfig.WindowSize}" Width="{x:Bind AppConfig.WindowSize}" />
                    <local:CircleMeter
                        HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"
                        Height="{x:Bind AppConfig.WindowSize,Mode=TwoWay}" Width="{x:Bind AppConfig.WindowSize,Mode=TwoWay}" />
                    <!-- デイト -->
                    <TextBlock 
                        x:Name="dateDisplay"
                        Margin="300,300,0,0" Text="31"
                        Visibility="{x:Bind DesignConfig.IsDateDisplay,Converter={StaticResource Visibility},Mode=OneWay}"
                        FontSize="{x:Bind DesignConfig.DateFontSize,Mode=OneWay}"
                        FontFamily="{x:Bind DesignConfig.DateFontFamily,Mode=OneWay}"
                        Foreground="{x:Bind DesignConfig.DateColor,Mode=OneWay}" />
                    <!--短針-->
                    <Path
                        x:Name="hourHand" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" 
                        Margin="{x:Bind DesignConfig.HourHand.Margin,Mode=OneWay}"
                        Width="{x:Bind DesignConfig.HourHand.Width,Mode=OneWay}"
                        Height="{x:Bind DesignConfig.HourHand.Height,Mode=OneWay}"
                        Data="{x:Bind DesignConfig.HourHand.Data,Mode=OneWay}"
                        Fill="{x:Bind DesignConfig.HandsColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <!--Data="M259.42356,3.5819738 C254.42137,3.5819738 252.54609,145.50599 259.42384,208.58333 266.30133,145.50599 264.4254,3.5819738 259.42356,3.5819738 z"-->
                        <Path.RenderTransform>
                            <RotateTransform
                                x:Name="hourHandAngle"
                                CenterX="{x:Bind DesignConfig.HourHand.CenterX,Mode=OneWay}"
                                CenterY="{x:Bind DesignConfig.HourHand.CenterY,Mode=OneWay}"/>
                        </Path.RenderTransform>
                    </Path>
                    <!--長針-->
                    <Path
                        x:Name="minuteHand"
                        Data="M259.42356,3.5819738 C254.42137,3.5819738 254.42206,147.08292 259.42384,208.58333 264.42529,147.08292 264.4254,3.5819738 259.42356,3.5819738 z" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Stretch="Fill"  Width="8" Height="200"
                        Fill="{x:Bind hourHand.Fill,Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="minuteHandAngle"  CenterX="4" CenterY="200" Angle="0" />
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Width="18" Height="18" 
                        Fill="{x:Bind hourHand.Fill,Mode=OneWay}"/>
                    <!--秒針-->
                    <Path 
                        x:Name="secondHand"
                        Data="M240,45 C239.34443,45 239.43768,211.66667 239.15652,295 L240.8435,295 C240.56233,211.66667 240.65557,45 240,45 z"
                        HorizontalAlignment="center" VerticalAlignment="Top" Margin="0,40,0,0" Stretch="Fill" Width="2" Height="250"
                        Fill="{x:Bind DesignConfig.SecondHandColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="secondHandAngle" CenterX="1" CenterY="210" Angle="0" />
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse
                        Width="8" Height="8"
                        Fill="{x:Bind secondHand.Fill,Mode=OneWay}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>

        <!--タイトルバー-->

        <Grid
            x:Name="myTitleBar" Height="30" VerticalAlignment="Top"
            Background="{ThemeResource SystemControlAltMediumLowAcrylicElementMediumBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ToggleButton
                    x:Name="configButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    Foreground="{x:Bind DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}"
                    Tapped="ConfigButton_Tapped" >
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" />
                    </ToggleButton.Content>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="1">
                    <ToggleButton
                        x:Name="clipButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                        IsChecked="{x:Bind AppConfig.IsTopMost, Mode=TwoWay}" Tapped="ClipButton_Tapped"
                        Foreground="{x:Bind DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                        <ToggleButton.Content>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE718;" />
                        </ToggleButton.Content>
                    </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="2" x:Name="moveButton" Height="30" Background="Transparent">
                <!--<ToggleButton
                    x:Name="moveButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="{x:Null}"
                    Foreground="{x:Bind DesignConfig.BackgroundColor,Converter={StaticResource ColorBrush},Mode=OneWay}">
                    <ToggleButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE759;" />
                    </ToggleButton.Content>
                </ToggleButton>-->
            </StackPanel>
        </Grid>

    </Grid>


</Page>
