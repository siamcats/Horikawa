<Page
    x:Class="iBuki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iBuki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="Page_SizeChanged"
    HorizontalAlignment="Left" VerticalAlignment="Top"
    RequestedTheme="{x:Bind vm.AppConfig.SystemTheme,Mode=TwoWay}"
    MaxHeight="500" MaxWidth="500" Height="500" Width="500"
    Background="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}">
    <Page.Resources>
        <local:BoolToEnumConverter x:Key="Enum" />
        <local:BoolAndVisibilityInterConverter x:Key="Visibility" />
        <local:BoolAndVisibilityInterReverseConverter x:Key="VisibilityReverse" />
        <local:DoubleToThickness x:Key="Thickness" />
        <local:ColorAndBrushInterConverter x:Key="ColorBrush" />
        <local:EnumAndIntInterConverter x:Key="EnumInt" />
        <local:DecimalTruncateConveter x:Key="Truncate" />
        <local:UriToBitmapConverter x:Key="UriBitmap"/>
        <!--ピボットメニュー-->
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style x:Key="PivotTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="PivotFontIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <!--設定項目-->
        <Style x:Key="SettingTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="21"/>
        </Style>
        <Style x:Key="SettingSubTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="SettingPanelStyle" TargetType="StackPanel">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Padding" Value="10,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="SettingTitlePanelStyle" TargetType="StackPanel" BasedOn="{StaticResource SettingPanelStyle}">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style x:Key="SettingWhitePanelStyle" TargetType="StackPanel" BasedOn="{StaticResource SettingPanelStyle}">
            <!--<Setter Property="Margin" Value="0,1,0,1"/>-->
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}"/>
        </Style>
        <!--設定項目コントロール-->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style x:Key="ColorButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderThemeBrush}"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderThemeBrush}"/>
        </Style>
        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Width" Value="210"/>
            <Setter Property="TickPlacement" Value="None"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <!--テンプレートリスト-->
        <Style x:Key="NameTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
        </Style>
        <Style x:Key="DescriptionTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

        <SplitView
            x:Name="Splitter"
            DisplayMode="CompactOverlay"
            CompactPaneLength="0" OpenPaneLength="300"
            IsPaneOpen="{Binding ElementName=configButton,Path=IsChecked, Mode=TwoWay}" >

            <!-- 設定パネル -->

            <SplitView.Pane>
                <Grid x:Name="ConfigPanel">
                    <Pivot x:Name="menuPivot">
                        <!--全般-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xE90F;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="generalTitle" Text="General"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--アプリ設定-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="appConfigTextBlock" Text="App Config"/>
                                    </StackPanel>
                                    <!--言語-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="languageLabel" Text="Language" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="languageComboBox" Width="100" Margin="0,0,0,8"
                                                ItemsSource="{x:Bind vm.LanguageList}"
                                                SelectedItem="{x:Bind vm.AppConfig.Language,Mode=TwoWay}"
                                                SelectionChanged="LanguageComboBox_SelectionChanged" />
                                            <HyperlinkButton
                                                x:Uid="restartButton" Content="Restart App to Apply"
                                                x:Name="restartLink" Margin="10,0,0,0" Visibility="Collapsed"
                                                Tapped="HyperlinkButton_Tapped"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--ウィンドウテーマ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="themeLabel" Text="Window Theme"/>
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="defaultButton" Content="Default"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Default, Mode=TwoWay}"/>
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="darkButton" Content="Dark"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Dark, Mode=TwoWay}" />
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="lightButton" Content="Light"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Light, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!--スタートアップ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <ToggleSwitch 
                                                x:Uid="startUpToggle" Header="StartUp"
                                                x:Name="startupToggle" OffContent="Off" OnContent="On"
                                                Toggled="StartupToggle_Toggled"/>
                                            <HyperlinkButton
                                                x:Uid="openSettingButton" Content="Open Settings"
                                                NavigateUri="ms-settings:startupapps" Margin="0,15,0,0"
                                                Visibility="{x:Bind startupToggle.IsEnabled,Converter={StaticResource VisibilityReverse},Mode=OneWay}">
                                                <ToolTipService.ToolTip>
                                                    <TextBlock x:Uid="openSettingTextBlock" Text="If disabled, change it from the Windows settings panel."/>
                                                </ToolTipService.ToolTip>
                                            </HyperlinkButton>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--時計の設定-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="clockConfigTextBlock" Text="Clock Config"/>
                                    </StackPanel>
                                    <!--ムーブメント-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="movementLabel" Text="Movement"/>
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton
                                                GroupName="movement"
                                                x:Uid="quartzButton" Content="Quartz"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Quartz, Mode=TwoWay}" />
                                            <RadioButton
                                                GroupName="movement"
                                                x:Uid="mechanicalButton" Content="Mechanical"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Mechanical, Mode=TwoWay}" />
                                            <!--<RadioButton
                                                GroupName="movement"
                                                x:Uid="chronographButton" Content="Chronograph "
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Chronograph , Mode=TwoWay}" />-->
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--テンプレート-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xE71D;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="templateTitle" Text="Templates"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--オリジナルテンプレート-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <Grid Height="Auto" Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Style="{StaticResource SettingTitleTextBlockStyle}"
                                                x:Uid="mysetTextBlock" Text="Stock"
                                                Padding="0,0,80,0" Grid.Column="0"/>
                                            <!--E8B5 EDE1 : Import / Export-->
                                            <!--E896 E898 : Donwload / Upload-->
                                            <!--E74E E74D : Save / Delete-->
                                            <!--E711 E710 : × / ＋ -->
                                            <!--ED25 EE71 : Folder / ImageExport-->
                                            <!--追加ボタン-->
                                            <StackPanel
                                                Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                                <Button
                                                    Style="{ThemeResource TextBlockButtonStyle}">
                                                    <ToolTipService.ToolTip>
                                                        <TextBlock x:Uid="addTextBlock" Text="Add"/>
                                                    </ToolTipService.ToolTip>
                                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" />
                                                    <!--保存orインポート選択フライアウト-->
                                                    <Button.Flyout>
                                                        <Flyout Placement="BottomEdgeAlignedLeft">
                                                            <StackPanel>
                                                                <Button
                                                                    x:Name="importTemplateButton"
                                                                    Style="{ThemeResource TextBlockButtonStyle}" Tapped="ImportTemplateButton_Tapped">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xED25;" />
                                                                        <TextBlock Padding="6,0,0,0" x:Uid="importTemplateTextBlock" Text="Import template file."/>
                                                                    </StackPanel>
                                                                </Button>
                                                                <Button
                                                                    x:Name="saveTemplateToggleButton"
                                                                    Style="{ThemeResource TextBlockButtonStyle}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;" />
                                                                        <TextBlock Padding="6,0,0,0" x:Uid="saveTemplateTextBlock" Text="Save current settings."/>
                                                                    </StackPanel>
                                                                    <!--保存詳細フライアウト-->
                                                                    <Button.Flyout>
                                                                        <Flyout Placement="BottomEdgeAlignedLeft">
                                                                            <StackPanel
                                                                                Orientation="Horizontal">
                                                                                <StackPanel Width="180" Margin="0,0,10,0">
                                                                                    <TextBox
                                                                                        x:Uid="inputNameTextBox" x:Name="inputNameTextBox" PlaceholderText="Template Name *"
                                                                                        Style="{StaticResource InputTextBoxStyle}"/>
                                                                                    <TextBox
                                                                                        x:Uid="inputDescriptionTextBox" x:Name="inputDescriptionTextBox" PlaceholderText="Description"
                                                                                        Style="{StaticResource InputTextBoxStyle}"/>
                                                                                    <TextBox
                                                                                        x:Uid="inputAuthorTextBox" x:Name="inputAuthorTextBox" PlaceholderText="Author"
                                                                                        Style="{StaticResource InputTextBoxStyle}"/>
                                                                                </StackPanel>
                                                                                <Button
                                                                                    x:Name="saveTemplateButton" x:Uid="saveButton" Content="Add" 
                                                                                    VerticalAlignment="Bottom"
                                                                                    Style="{ThemeResource AccentButtonStyle}" Tapped="SaveTemplateButton_Tapped" />
                                                                            </StackPanel>
                                                                        </Flyout>
                                                                    </Button.Flyout>
                                                                </Button>
                                                            </StackPanel>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                    <!--マイセットリスト-->
                                    <ListView
                                        x:Name="templateList" Width="300"
                                        ItemsSource="{x:Bind vm.TemplateList, Mode=OneWay}"
                                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                        Tapped="TemplateList_Tapped">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="64" Width="280">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="30"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse
                                                        Grid.Column="0"
                                                        Height="50" Width="50" VerticalAlignment="Center">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Thumbnail}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <StackPanel
                                                        Grid.Column="0" Orientation="Horizontal">
                                                        <!--export-->
                                                        <Button
                                                            x:Name="templateExportButton" Style="{ThemeResource TextBlockButtonStyle}" 
                                                            Width="30" Height="30" Padding="0" Tapped="TemplateExportButton_Tapped">
                                                            <Button.Content>
                                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEE71;" />
                                                            </Button.Content>
                                                            <ToolTipService.ToolTip>
                                                                <TextBlock x:Uid="exportTextBlock"/>
                                                            </ToolTipService.ToolTip>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <TextBlock
                                                            Style="{StaticResource NameTextBlockStyle}" Text="{Binding Name}"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding CreatedAtDateFormat}"
                                                                Padding="0,0,8,0"/>
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Author}"/>
                                                        </StackPanel>
                                                        <TextBlock
                                                            Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Description}" />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Grid.Column="2" Orientation="Horizontal">
                                                        <!--delete-->
                                                        <Button
                                                            x:Name="templateDeleteButton" Style="{ThemeResource TextBlockButtonStyle}" 
                                                            Width="30" Height="30" Padding="0" Tapped="TemplateDeleteButton_Tapped">
                                                            <Button.Content>
                                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" />
                                                            </Button.Content>
                                                            <ToolTipService.ToolTip>
                                                                <TextBlock x:Uid="deleteTextBlock"/>
                                                            </ToolTipService.ToolTip>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <!--プリセット-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="presetTextBlock" Text="Presets"/>
                                    </StackPanel>
                                    <!--プリセットリスト-->
                                    <ListView
                                        x:Name="presetTemplateList"
                                        ItemsSource="{x:Bind vm.PresetTemplateList, Mode=OneWay}"
                                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                        Tapped="PresetTemplateList_Tapped">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    Orientation="Horizontal" Height="64">
                                                    <Ellipse Height="50" Width="50" VerticalAlignment="Center">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Thumbnail}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <TextBlock
                                                            Style="{StaticResource NameTextBlockStyle}" Text="{Binding Name}"/>
                                                        <!--<StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding CreatedAtDateFormat}"
                                                                Padding="0,0,8,0"/>
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Author}"/>
                                                        </StackPanel>-->
                                                        <TextBlock
                                                            TextWrapping="Wrap" Width="240"
                                                            Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Description}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--背景-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="HoloLens MDL2 Assets" Glyph="&#xE7AA;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="backgroundTextBlock" Text="Background"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--背景-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="backgroundTextBlock" Text="Background"/>
                                    </StackPanel>
                                    <!--色-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="colorLabel" Text="Color"/>
                                        <Button
                                            Style="{StaticResource ColorButtonStyle}"
                                            Background="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorButton_Tapped" >
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                            IsColorChannelTextInputVisible="False"
                                                            IsColorSliderVisible="True"
                                                            Color="{x:Bind vm.DesignConfig.BackgroundColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Button>
                                    </StackPanel>
                                    <!--画像-->
                                    <StackPanel Height="130" Style="{StaticResource SettingWhitePanelStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel>
                                                <ToggleSwitch 
                                                    x:Uid="imageToggle" Header="Image"
                                                    x:Name="backgroundImageDisplayToggle" OffContent="Off" OnContent="On"
                                                    IsOn="{x:Bind vm.DesignConfig.IsBackgroundImageDisplay, Mode=TwoWay}" />
                                                <Button
                                                    Style="{StaticResource ButtonStyle}"
                                                    x:Uid="imageSelectButton" Content="Select Image" 
                                                    x:Name="DialImagePicker" Tapped="DialImagePicker_Tapped"
                                                    IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}" />
                                                <TextBlock Style="{StaticResource DescriptionTextBlockStyle}"></TextBlock>
                                                <ToolTipService.ToolTip>
                                                    <TextBlock x:Uid="backgroundTipTextBlock" Text="500x500 pixels or less, png"/>
                                                </ToolTipService.ToolTip>
                                            </StackPanel>
                                            <Image
                                                Width="130" Height="130"
                                                Source="{x:Bind vm.DesignConfig.BackgroundImage,Mode=OneWay}"
                                                Visibility="{x:Bind backgroundImageDisplayToggle.IsOn,Converter={StaticResource Visibility},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--拡大・縮小-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="stretchTextBlock" Text="Stretch" />
                                        <ComboBox
                                            x:Name="backgroundImageStretch" Width="270" Margin="0,0,0,8"
                                            IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}"
                                            ItemsSource="{x:Bind vm.BackgroundImageStretchList}"
                                            SelectedIndex="{x:Bind vm.SelectedBackgroundImageStretch,Converter={StaticResource EnumInt} ,Mode=TwoWay}" />
                                    </StackPanel>
                                    <!--座標-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Height="20" Padding="0,0,100,0" x:Uid="coordinateLabel" Text="Coordinate"/>
                                            <HyperlinkButton
                                                Grid.Column="1" x:Uid="resetButton" x:Name="positionResetLink"
                                                Height="20" Margin="0" Padding="0" Content="Reset" HorizontalAlignment="Right"
                                                Tapped="PositionResetLink_Tapped"
                                                IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}"
                                                />
                                        </Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                 Width="15" HorizontalAlignment="Center" VerticalAlignment="Center" Text="X"/>
                                            <Slider
                                                x:Name="bgXSlider"
                                                Minimum="-500" Maximum="500" Width="195"
                                                TickPlacement="None" TickFrequency="1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.BackgroundImageCoordinateX,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind bgXSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="15" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Y"/>
                                            <Slider
                                                x:Name="bgYSlider"
                                                Minimum="-500" Maximum="500" Width="195"
                                                TickPlacement="None" TickFrequency="1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.BackgroundImageCoordinateY,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                            Text="{x:Bind bgYSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!-- 前景 -->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="foregroundTextBlock" Text="Foreground"/>
                                    </StackPanel>
                                    <!--画像-->
                                    <StackPanel Height="130" Style="{StaticResource SettingWhitePanelStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel>
                                                <ToggleSwitch 
                                                    x:Uid="imageToggle" Header="Image"
                                                    x:Name="foregroundImageDisplayToggle" OffContent="Off" OnContent="On"
                                                    IsOn="{x:Bind vm.DesignConfig.IsForegroundImageDisplay, Mode=TwoWay}" />
                                                <Button
                                                    Style="{StaticResource ButtonStyle}"
                                                    x:Uid="imageSelectButton" Content="Select Image" 
                                                    x:Name="dialImagePicker" Tapped="ForegroundImagePicker_Tapped"
                                                    IsEnabled="{x:Bind foregroundImageDisplayToggle.IsOn,Mode=OneWay}" />
                                            </StackPanel>
                                            <Image
                                                Width="130" Height="130"
                                                Source="{x:Bind vm.DesignConfig.ForegroundImage,Mode=OneWay}"
                                                Visibility="{x:Bind foregroundImageDisplayToggle.IsOn,Converter={StaticResource Visibility},Mode=OneWay}"/>
                                            <ToolTipService.ToolTip>
                                                <TextBlock x:Uid="foregroundTipTextBlock" Text="500x500 pixels or less, transparent png"/>
                                            </ToolTipService.ToolTip>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--文字盤-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0B4;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="clockFaceTitle" Text="Dial"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--目盛り-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="scaleLabel" Text="Scale"/>
                                        <ToggleSwitch
                                            x:Name="scaleDisplayToggle" 
                                            OffContent="Off" OnContent="On"
                                            IsOn="{x:Bind vm.IsScaleDisplay, Mode=TwoWay}" />
                                    </StackPanel>
                                    <!--目盛りの色-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="colorLabel" Text="Color"/>
                                        <Button
                                            Style="{StaticResource ColorButtonStyle}"
                                            IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
