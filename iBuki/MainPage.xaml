<Page
    x:Class="iBuki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iBuki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="Page_SizeChanged"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
    RequestedTheme="{x:Bind vm.AppConfig.SystemTheme,Mode=TwoWay}"
    Background="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}">
    <Page.Resources>
        <local:BoolToEnumConverter x:Key="Enum" />
        <local:BoolAndVisibilityInterConverter x:Key="Visibility" />
        <local:DoubleToThickness x:Key="Thickness" />
        <local:ColorAndBrushInterConverter x:Key="ColorBrush" />
        <local:EnumAndIntInterConverter x:Key="EnumInt" />
        <local:DecimalTruncateConveter x:Key="Truncate" />
        <!--ピボットメニュー-->
        <Style TargetType="PivotItem">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style x:Key="PivotTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="PivotFontIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <!--設定項目-->
        <Style x:Key="SettingTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="SettingSubTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style x:Key="SettingPanelStyle" TargetType="StackPanel">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Padding" Value="10,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="SettingTitlePanelStyle" TargetType="StackPanel" BasedOn="{StaticResource SettingPanelStyle}">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        <Style x:Key="SettingWhitePanelStyle" TargetType="StackPanel" BasedOn="{StaticResource SettingPanelStyle}">
            <!--<Setter Property="Margin" Value="0,1,0,1"/>-->
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}"/>
        </Style>
        <!--設定項目コントロール-->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="ColorButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderThemeBrush}"/>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderThemeBrush}"/>
        </Style>
        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Width" Value="210"/>
            <Setter Property="TickPlacement" Value="Outside"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <!--テンプレートリスト-->
        <Style x:Key="NameTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
        </Style>
        <Style x:Key="DescriptionTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
        <Style x:Key="AuthorTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="14"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5,1,5,2"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
    </Page.Resources>


    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">

        <SplitView
            x:Name="Splitter"
            DisplayMode="CompactOverlay"
            CompactPaneLength="0" OpenPaneLength="300"
            IsPaneOpen="{Binding ElementName=configButton,Path=IsChecked, Mode=TwoWay}" >

            <!-- 設定パネル -->

            <SplitView.Pane>
                <Grid x:Name="ConfigPanel">
                    <Pivot>
                        <!--全般-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xE90F;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="generalTitle" Text="General"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--アプリ設定-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="appConfigTextBlock" Text="App Config"/>
                                    </StackPanel>
                                    <!--言語-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="languageLabel" Text="Language" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="languageComboBox" Width="100" Margin="0,0,0,8"
                                                ItemsSource="{x:Bind vm.LanguageList}"
                                                SelectedItem="{x:Bind vm.AppConfig.Language,Mode=TwoWay}"
                                                SelectionChanged="LanguageComboBox_SelectionChanged" />
                                            <HyperlinkButton
                                                x:Uid="restartButton" Content="Restart App to Apply"
                                                x:Name="restartLink" Margin="10,0,0,0" Visibility="Collapsed"
                                                Tapped="HyperlinkButton_Tapped"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--ウィンドウテーマ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="themeLabel" Text="Window Theme"/>
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="defaultButton" Content="Default"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Default, Mode=TwoWay}"/>
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="darkButton" Content="Dark"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Dark, Mode=TwoWay}" />
                                            <RadioButton
                                                GroupName="theme"
                                                x:Uid="lightButton" Content="Light"
                                                IsChecked="{x:Bind vm.AppConfig.SystemTheme, Converter={StaticResource Enum}, ConverterParameter=Light, Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!--時計の設定-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="clockConfigTextBlock" Text="Clock Config"/>
                                    </StackPanel>
                                    <!--ムーブメント-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="movementLabel" Text="Movement"/>
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton
                                                GroupName="movement"
                                                x:Uid="quartzButton" Content="Quartz"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Quartz, Mode=TwoWay}" />
                                            <RadioButton
                                                GroupName="movement"
                                                x:Uid="mechanicalButton" Content="Mechanical"
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Mechanical, Mode=TwoWay}" />
                                            <RadioButton
                                                GroupName="movement"
                                                x:Uid="chronographButton" Content="Chronograph "
                                                IsChecked="{x:Bind vm.AppConfig.Movement, Converter={StaticResource Enum}, ConverterParameter=Chronograph , Mode=TwoWay}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--テンプレート-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xE71D;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="templateTitle" Text="Template"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--Preset-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="PresetTextBlock" Text="Preset"/>
                                    </StackPanel>
                                    <!--リスト-->
                                    <ListView
                                        x:Name="presetTemplateList"
                                        ItemsSource="{x:Bind vm.PresetTemplateList, Mode=OneWay}"
                                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                        Tapped="PresetTemplateList_Tapped"
                                        >
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    Orientation="Horizontal" Height="64">
                                                    <Ellipse Height="50" Width="50" VerticalAlignment="Center">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Thumbnail}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <TextBlock
                                                            Style="{StaticResource NameTextBlockStyle}" Text="{Binding Name}"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding CreatedAtDateFormat}"
                                                                Padding="0,0,8,0"/>
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Author}"/>
                                                        </StackPanel>
                                                        <TextBlock
                                                            Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Description}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <!--My Template-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <Grid Height="Auto" Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Style="{StaticResource SettingTitleTextBlockStyle}"
                                                x:Uid="mysetTextBlock" Text="My Templates"
                                                Padding="0,0,80,0" Grid.Column="0"/>
                                            <!--add template button-->
                                            <StackPanel
                                                Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                                <ToggleButton
                                                    x:Name="saveTemplateToggleButton"
                                                    Style="{ThemeResource TextBlockButtonStyle}">
                                                    <ToolTipService.ToolTip>
                                                        <TextBlock x:Uid="saveTemplateTextBlock" Text="Save current settings."/>
                                                    </ToolTipService.ToolTip>
                                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" />
                                                </ToggleButton>
                                                <Button
                                                    x:Name="importTemplateButton" IsEnabled="false"
                                                    Style="{ThemeResource TextBlockButtonStyle}">
                                                    <ToolTipService.ToolTip>
                                                        <TextBlock x:Uid="importTemplateTextBlock" Text="Import template file."/>
                                                    </ToolTipService.ToolTip>
                                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xED25;" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                    <!--保存パネル-->
                                    <StackPanel
                                        Style="{StaticResource SettingPanelStyle}" Orientation="Horizontal"
                                        Visibility="{x:Bind saveTemplateToggleButton.IsChecked,Converter={StaticResource Visibility},Mode=OneWay}">
                                        <StackPanel Width="225" Margin="0,0,5,0">
                                            <TextBox
                                                x:Name="inputNameTextBox"
                                                PlaceholderText="Template Name"
                                                Style="{StaticResource AuthorTextBoxStyle}"/>
                                            <TextBox
                                                x:Name="inputAuthorTextBox"
                                                PlaceholderText="Author"
                                                Style="{StaticResource AuthorTextBoxStyle}"/>
                                            <TextBox
                                                x:Name="inputDescriptionTextBox"
                                                PlaceholderText="Description"
                                                Style="{StaticResource AuthorTextBoxStyle}"/>
                                        </StackPanel>
                                        <Button
                                            x:Name="saveTemplateButton" x:Uid="saveButton" Content="Save" 
                                            VerticalAlignment="Bottom"
                                            Style="{ThemeResource AccentButtonStyle}" Tapped="SaveTemplateButton_Tapped" />
                                    </StackPanel>
                                    <!--リスト-->
                                    <ListView
                                        x:Name="templateList"
                                        ItemsSource="{x:Bind vm.TemplateList, Mode=OneWay}"
                                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}" Tapped="TemplateList_Tapped"
                                        >
                                        <!--SelectionChanged="TemplateList_SelectionChanged">-->
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="64">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse
                                                        Grid.Column="0"
                                                        Height="50" Width="50" VerticalAlignment="Center">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Thumbnail}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                                        <TextBlock
                                                            Style="{StaticResource NameTextBlockStyle}" Text="{Binding Name}"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding CreatedAtDateFormat}"
                                                                Padding="0,0,8,0"/>
                                                            <TextBlock
                                                                Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Author}"/>
                                                        </StackPanel>
                                                        <TextBlock
                                                            Style="{StaticResource DescriptionTextBlockStyle}" Text="{Binding Description}" />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Grid.Column="0" Margin="-12,0,0,0"
                                                        HorizontalAlignment="left" VerticalAlignment="Top" >
                                                        <!--delete-->
                                                        <Button
                                                            x:Name="templateDeleteButton"
                                                            Width="20" Height="20" Padding="0" Tapped="TemplateDeleteButton_Tapped">
                                                            <Button.Content>
                                                                <FontIcon FontSize="14" FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" />
                                                            </Button.Content>
                                                        </Button>
                                                        <!--export-->
                                                        <!--<Button
                                                            Width="20" Height="20" Padding="0">
                                                            <Button.Content>
                                                                <FontIcon FontSize="14" FontFamily="Segoe MDL2 Assets" Glyph="&#xEDE1;" />
                                                            </Button.Content>
                                                        </Button>-->
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--背景-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="HoloLens MDL2 Assets" Glyph="&#xE7AA;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="backgroundTextBlock" Text="Background"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--背景-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="backgroundTextBlock" Text="Background"/>
                                    </StackPanel>
                                    <!--色-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <TextBlock
                                            x:Uid="colorLabel" Text="Color"/>
                                        <Button
                                            Style="{StaticResource ColorButtonStyle}"
                                            Background="{x:Bind vm.DesignConfig.BackgroundColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorButton_Tapped" >
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                            IsColorChannelTextInputVisible="False"
                                                            IsColorSliderVisible="True"
                                                            Color="{x:Bind vm.DesignConfig.BackgroundColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Button>
                                    </StackPanel>
                                    <!--画像-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}">
                                        <ToggleSwitch 
                                            x:Uid="imageToggle" Header="Image"
                                            x:Name="backgroundImageDisplayToggle" OffContent="Off" OnContent="On"
                                            IsOn="{x:Bind vm.DesignConfig.IsBackgroundImageDisplay, Mode=TwoWay}" />
                                        <Button
                                            Style="{StaticResource ButtonStyle}"
                                            x:Uid="imageSelectButton" Content="Select Image" 
                                            x:Name="DialImagePicker" Tapped="DialImagePicker_Tapped"
                                            IsEnabled="{x:Bind backgroundImageDisplayToggle.IsOn,Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </PivotItem>
                        <!--文字盤-->
                        <PivotItem>
                            <PivotItem.Header>
                                <StackPanel>
                                    <FontIcon Style="{StaticResource PivotFontIconStyle}" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0B4;" />
                                    <TextBlock Style="{StaticResource PivotTextBlockStyle}" x:Uid="clockFaceTitle" Text="Dial"/>
                                </StackPanel>
                            </PivotItem.Header>
                            <ScrollViewer>
                                <StackPanel>
                                    <!--目盛り-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingTitleTextBlockStyle}"
                                            x:Uid="scaleLabel" Text="Scale"/>
                                        <ToggleSwitch
                                            x:Name="scaleDisplayToggle" 
                                            OffContent="Off" OnContent="On"
                                            IsOn="{x:Bind vm.IsScaleDisplay, Mode=TwoWay}" />
                                    </StackPanel>
                                    <!--目盛りの色-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="colorLabel" Text="Color"/>
                                        <Button
                                            Style="{StaticResource ColorButtonStyle}"
                                            IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                            Background="{x:Bind vm.DesignConfig.ScaleColor, Converter={StaticResource ColorBrush}, Mode=OneWay}"
                                            Tapped="ColorButton_Tapped">
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout Placement="Right">
                                                    <Viewbox Margin="5" MaxWidth="300" Stretch="Fill">
                                                        <ColorPicker
                                                            x:Name="scaleColorPicker"
                                                            IsColorChannelTextInputVisible="False"
                                                            IsColorSliderVisible="True"
                                                            Color="{x:Bind vm.DesignConfig.ScaleColor,Mode=TwoWay}"/>
                                                    </Viewbox>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </Button>
                                    </StackPanel>
                                    <!--目盛りの数-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="countLabel" Text="Count" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="scaleCountSlider"
                                                Minimum="1" Maximum="240" TickFrequency="12" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleCount,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind scaleCountSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--目盛りの半径-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="sizeLabel" Text="Size" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="scaleRadiusSlider"
                                                Minimum="30" Maximum="50" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleRadius,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind scaleRadiusSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--目盛りの長さ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="lengthLabel" Text="Length" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="scaleLengthSlider"
                                                Minimum="0.1" Maximum="4" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleLength,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind scaleLengthSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--目盛りの太さ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="thicknessLabel" Text="Thickness" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="scaleThicknessSlider"
                                                Minimum="0.1" Maximum="4" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.ScaleThickness,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind scaleThicknessSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--一部目盛り-->
                                    <StackPanel
                                        Style="{StaticResource SettingTitlePanelStyle}">
                                        <TextBlock
                                            Style="{StaticResource SettingSubTitleTextBlockStyle}"
                                            x:Uid="alterScaleLabel" Text="Alter Scale" />
                                        <ToggleSwitch
                                            x:Uid="alterScaleToggle" 
                                            x:Name="alterScaleDisplayToggle" 
                                            OffContent="Off" OnContent="On"
                                            IsEnabled="{x:Bind scaleDisplayToggle.IsOn,Mode=OneWay}"
                                            IsOn="{x:Bind vm.IsAlterScale, Mode=TwoWay}" />
                                    </StackPanel>
                                    <!--一部目盛り間隔-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="intervalLabel" Text="Interval" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="alterScaleIntervalSlider"
                                                Minimum="0" Maximum="{x:Bind vm.DesignConfig.ScaleCount,Mode=OneWay}"
                                                TickFrequency="1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind vm.IsAlterScaleEnable,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.AlterScaleInterval,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind alterScaleIntervalSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--一部目盛りの半径-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="sizeLabel" Text="Size" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="alterScaleRadiusSlider"
                                                Minimum="30" Maximum="50" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind vm.IsAlterScaleEnable,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.AlterScaleRadius,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind alterScaleRadiusSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--一部目盛りの長さ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="lengthLabel" Text="Length" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="alterScaleLengthSlider"
                                                Minimum="0.1" Maximum="4" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind vm.IsAlterScaleEnable,Mode=OneWay}"
                                                Value="{x:Bind vm.DesignConfig.AlterScaleLength,Mode=TwoWay}" />
                                            <TextBlock
                                                TextAlignment="Center" VerticalAlignment="Center" Width="40"
                                                Text="{x:Bind alterScaleLengthSlider.Value,Converter={StaticResource Truncate},Mode=OneWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--一部目盛りの太さ-->
                                    <StackPanel
                                        Style="{StaticResource SettingWhitePanelStyle}" >
                                        <TextBlock
                                            x:Uid="thicknessLabel" Text="Thickness" />
                                        <StackPanel Orientation="Horizontal">
                                            <Slider
                                                Style="{StaticResource SliderStyle}"
                                                x:Name="alterScaleThicknessSlider"
                                                Minimum="0.1" Maximum="3" TickFrequency="0.1" SnapsTo="Ticks"
                                                IsEnabled="{x:Bind vm.IsAlterScaleEnable,Mode=OneWay}"
