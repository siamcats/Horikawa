<Page
    x:Class="iBuki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iBuki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="500" Height="500" Visibility="Visible">

    <Grid Width="500" Height="500">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,37,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <Ellipse Width="490" Height="490" Stroke="Black" Fill="White" Grid.Row="3"/>
        <Path x:Name="secondHand" Data="M240,45 C239.34443,45 239.43768,211.66667 239.15652,295 L240.8435,295 C240.56233,211.66667 240.65557,45 240,45 z"
              Fill="#FF153555" HorizontalAlignment="Center" Margin="0,14,0,236" Stretch="Fill" StrokeThickness="0" Width="2" Height="236" UseLayoutRounding="False">
            <Path.RenderTransform>
                <RotateTransform x:Name="secondHandAngle" CenterX="1" CenterY="229" Angle="0" />
            </Path.RenderTransform>
        </Path>
        <Path x:Name="hourHand" Data="M259.42356,3.5819738 C254.42137,3.5819738 252.54609,145.50599 259.42384,208.58333 266.30133,145.50599 264.4254,3.5819738 259.42356,3.5819738 z" 
              Fill="#FF153555" HorizontalAlignment="Center" Margin="0,120,0,0" Stretch="Fill" StrokeThickness="0" Width="9" Height="130" VerticalAlignment="Top" UseLayoutRounding="False">
            <Path.RenderTransform>
                <RotateTransform x:Name="hourHandAngle" CenterX="4.5" CenterY="130" Angle="315" />
            </Path.RenderTransform>
        </Path>
        <Path x:Name="minuteHand" Data="M259.42356,3.5819738 C254.42137,3.5819738 254.42206,147.08292 259.42384,208.58333 264.42529,147.08292 264.4254,3.5819738 259.42356,3.5819738 z" 
              Fill="#FF153555" HorizontalAlignment="Center" Margin="0,50,0,0" Stretch="Fill" StrokeThickness="0" Width="8" Height="200" VerticalAlignment="Top" UseLayoutRounding="False">
            <Path.RenderTransform>
                <RotateTransform x:Name="minuteHandAngle"  CenterX="4" CenterY="200" Angle="45" />
            </Path.RenderTransform>
        </Path>
        <local:CircleMeter HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" 
                           Height="500" Width="500" />
    </Grid>


</Page>
